#!/bin/bash

# Opens a script with vim. If the given parameter is a function
# or an alias a message is printed in the stderr.

if [[ $# -le 0 ]]; then
	echo 'No parameter given' >&2
	exit 1
fi


pathToFile=`which $1`

# Not a program
if [[ $? != 0 ]]; then
	echo 'No program found' >&2
	# type $1 | head -n 1 >&2
	exit 2
fi

echo opening \'$pathToFile\'
sleep 1
vim $pathToFile

