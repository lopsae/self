#!/bin/bash

read -d '' helpDoc <<"helpDoc"
NAME
    witch - open the file of a command or prints its type

SYNOPSIS
    witch [-h] [--] <command>

DESCRIPTION
    Opens a command program or script with sublime. If `<command>` is not
    a `file` its information is printed instead.

OPTIONS
    -h  Prints this help output and quits the program.
helpDoc


# Error codes
error_invalidOptions=1
error_noArguments=2
error_noType=3


# Options parsing
while getopts :h option; do
	case $option in
		'h')
			# Print help
			if [[ -t 0 ]]; then
				echo "$helpDoc" | less
			else
				echo "$helpDoc"
			fi
			exit 0
			;;
		'?')
			echo "Invalid option: -$OPTARG" >&2
			exit $error_invalidOptions
			;;
	esac
done
shift $(( OPTIND - 1 ));


commandType=$(type -t "$1")
if [[ $? != 0 ]]; then
	echo 'Command not found' >&2
	exit $error_noType
fi


# `alias', `keyword', `function', `builtin', `file' or `'
case $commandType in
 	'alias')
		echo "alias: '$1'"
		exit 0
		;;
	'keyword'|'builtin')
		echo "keyword|builtin: '$1'"
		exit 0
		;;
	'function')
		echo "function: '$1'"
		exit 0
		;;
	'file')
		echo "file: '$1'"
		pathToFile=$(which "$1" 2>/def/null)
		subl "$pathToFile"
		exit 0
		;;
esac

