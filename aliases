# aliases


# utilities
alias cd..='cd ..'

# ls coloring and long list alias
if [[ $(uname) == 'Darwin' ]]; then
	alias ls='ls -G'
	alias ll='ls -al'
else
	alias ll='ls -al --color=tty'
fi

# git aliases
# some use the gools project: https://github.com/lopsae/gools
alias gs='git status --short --branch --untracked-files'
alias gss='git status'
alias gb='git branch -v'
alias gol='git log --graph --decorate --pretty=medium --abbrev-commit'
alias getch='git fetch --prune; echo; git branch -v | grep "^*"'
alias gup='git merge $(ginfo tracking)'
alias glast='git --no-pager log --pretty=short -n 1'
alias glist='git --no-pager stash list'
alias gardup='git reset --hard @{u}'
alias gitcheck='ssh -T git@github.com'

# subversion aliases
alias ss='svn st'
alias sup='svn up'
alias sate='svn log -l4'

# mercurial aliases
alias ht='hg status'
alias hup='hg update'
alias hin='hg incoming'
alias hout='hg outgoing'
alias hate='hg late'


